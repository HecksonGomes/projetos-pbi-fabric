	measure 'LM Saldo' = ```
			
			VAR __Limite = LASTDATE( ALL ( fMovimentos[DataMovimentacao] ) )
			
			VAR __Resultado = 
			    CALCULATE(
			        [Saldo]
			        , DATEADD (
			            FILTER(
			                VALUES ( dCalendario[Data] )
			                ,dCalendario[Data] <= __Limite
			            )
			            , -1 , MONTH
			        )
			    )
			        
			RETURN __Resultado 
			
			```
		formatString: #,0;(#,0)
		lineageTag: 5247fd7e-f865-4950-88e3-e79917961ea7

		annotation PBI_FormatHint = {"isCustom":true}

	measure 'MoM Saldo' = ```
			
			
			VAR __Atual = [Saldo]
			VAR __Anterior = [LM Saldo]
			
			VAR __Resultado = 
			    DIVIDE (
			        __Atual - __Anterior,
			        ABS ( __Anterior ) 
			    )
			
			RETURN __Resultado
			```
		formatString: 0%
		lineageTag: afd96fd4-3ede-4c93-a8ec-c111ac223408

		annotation PBI_FormatHint = {"isCustom":true}

	measure '% Saidas pareto' = ```
			
			VAR _SaidaAcumulada = 
			    CALCULATE(
			        [Total de saidas]
			        , WINDOW ( 
			            1, ABS ,
			            0, REL ,
			            FILTER( ALLSELECTED( dCategorias[NomeCategoria] ), dCategorias[NomeCategoria] <> "Receita" ),
			            ORDERBY( [Total de saidas], DESC )
			        )
			    )
			VAR _ParetoAcumulado = 
			    CALCULATE(
			        [Total de saidas]
			        , WINDOW (
			                1 , ABS ,
			                -1, ABS ,
			                FILTER( ALLSELECTED( dCategorias[NomeCategoria] ), dCategorias[NomeCategoria] <> "Receita" ),
			                ORDERBY( [Total de saidas], DESC )
			            )
			        )
			
			VAR __Resultado = DIVIDE ( _SaidaAcumulada, _ParetoAcumulado )
			
			RETURN  __Resultado
			```
		formatString: 0.0%
		lineageTag: 98ac3cb0-85ff-4dca-8e91-09964d233d47

